rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow unauthenticated users to submit store requests
    match /tenants/{document} {
      allow read, write: if request.auth != null;
      allow create: if true; // Allow anyone to create pending tenants
    }
    
    // Allow unauthenticated users to submit store requests (backup)
    match /store-requests/{document} {
      allow create: if true; // Allow anyone to submit store requests
      allow read, write: if request.auth != null;
    }
    
    // Admin collection - only authenticated users
    match /admins/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Products collection - only authenticated users
    match /products/{document} {
      allow read: if true; // Public read for products
      allow write: if request.auth != null;
    }
    
    // Orders collection - only authenticated users
    match /orders/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny all other documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
