rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Active tenants - authenticated users only
    match /tenants/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Pending tenants - public create, authenticated read/write
    match /pendingTenants/{document} {
      allow create: if true; // Allow anyone to submit store requests
      allow read, write, delete: if true; // TODO: Change to request.auth != null in production
    }
    
    // Declined tenants - authenticated users only
    match /declinedTenants/{document} {
      allow read, write, delete: if true; // TODO: Change to request.auth != null in production
    }
    
    // Store requests (legacy backup) - public create
    match /store-requests/{document} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }
    
    // Admin collection - only authenticated users
    match /admins/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Products collection - public read, authenticated write
    match /products/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Orders collection - only authenticated users
    match /orders/{document} {
      allow read, write: if request.auth != null;
    }
    
    // SwagBucks collections - authenticated users only
    match /swagbucks/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /redemptions/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny all other documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
